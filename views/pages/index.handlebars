<div class="container-fluid mt-3">
    <div class="row">

        <div class="col-9">
            <center>
                <h1>BLOG</h1>
            </center>
            {{#each post}}
            <div style="border: 1px ridge rgb(238, 230, 230);background-color:white;" class="py-3 mb-4 pl-3 ">
                <div class="media">
                    <img src="/uploads/{{image}}" width="220" height="200" class="img-fluid mr-3" alt="...">
                    <div class="media-body">
                        <h5 class="mt-0">{{title}}</h5>
                        <small class="text-muted">{{createdAt}},{{author}}</small>
                        <p>{{description}}<button class="btn btn-info float-right mr-4"><a href=" /detail/{{id}}">Read
                                    More</a></button></p>


                    </div>
                </div>
            </div>
            {{/each}}


        </div>
        <div class="col mt-3">

            <h3>
                <u>Popular posts</u>
            </h3>

            <div class="container pt-2" style="background-color:white;">
                {{#each posts}}
                <ul>
                    <li> <a href="/detail/{{id}}" class="anc">{{title}}</a> </li>
                </ul>
                {{/each}}
