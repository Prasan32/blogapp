                9806952585 <br>
                Butwal-6,Amarpath <br>
                To know more
                <a href="/contact" class="anc">click here</a>
            </div>
        </div>
    </div>

    <section>
        <div class="container">
            <header>
                <h1>Latest News</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Esse laborum, officia delectus
                    corrupti
                    modi
                    natus?</p>
            </header>

            <main>
                {{#each posts}}
                <div class="singleBlog">
                    <img src="/uploads/{{image}}" class="imgs" alt="">
                    <div class="blogContent">
                        <h3>{{title}}</h3>
                        <p>By <a href="#">{{author}}</a></p>
                        <a href="/detail/{{id}}" class="btn btn-info">Read More</a>
                    </div>
                </div>
                {{/each}}
            </main>
        </div>
    </section>
</div>